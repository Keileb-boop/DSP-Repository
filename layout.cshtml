<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PaginasDSP</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        /* Estilo para el fondo y el navbar */
        body {
            margin: 0;
            font-family: 'Arial', sans-serif;
            background-color: #fff;
            color: #000;
            background-image: url('img/concierto.jpg'); /* Especifica la ruta a tu imagen */
            background-size: cover; /* Ajusta la imagen para que cubra todo el fondo */
            background-repeat: no-repeat; /* Evita que la imagen se repita */
            background-position: center; /* Centra la imagen */
        }

        .navbar {
            background-color: #064897;
            padding: 25px;
            text-align: left;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

            .navbar ul {
                list-style-type: none;
                margin: 0;
                padding: 0;
                display: flex;
            }

        .navbar-right li {
            margin-left: 15px;
        }

        .navbar li a {
            color: #fff;
            text-decoration: none;
            font-size: 1.2em;
            padding: 10px;
            display: inline-block;
            transition: background-color 0.3s;
            border-radius: 2em;
        }

            .navbar li a:hover {
                background-color: #1f71d3;
                border-radius: 2em;
            }

        /* Estilo para el formulario de inicio de sesión */
        .login-container {
            margin: 60px auto;
            padding: 40px;
            max-width: 400px;
            background-color: #1C1E2B;
            border-radius: 12px;
            box-shadow: 0 0 25px rgba(255, 255, 255, 0.1);
        }

        h1 {
            text-align: center;
            font-size: 32px;
            color: #D4AF37;
            margin-bottom: 30px;
        }

        label {
            font-weight: bold;
            display: block;
            margin-bottom: 8px;
            font-size: 16px;
            color: #CCCCCC;
        }

        input[type="text"], input[type="password"] {
            width: 100%;
            padding: 12px;
            margin-top: 6px;
            border: 1px solid #555;
            border-radius: 10px;
            background-color: #282C3D;
            color: #fff;
            box-sizing: border-box;
        }

        button {
            background-color: #D4AF37;
            color: #1C1E2B;
            padding: 15px;
            border: none;
            border-radius: 10px;
            cursor: pointer;
            font-size: 18px;
            margin-top: 30px;
            width: 100%;
            transition: background-color 0.3s ease;
        }

            button:hover {
                background-color: #B8860B;
            }

        .link {
            text-align: center;
            margin-top: 20px;
        }

            .link a {
                color: #D4AF37;
                text-decoration: none;
            }

                .link a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <header>
        <nav class="navbar">
            <ul class="navbar-right">
                <li><a asp-controller="Home" asp-action="Index">Inicio</a></li>
                <li><a asp-controller="Home" asp-action="conciertoadd">Agregar concierto</a></li>
            </ul>
        </nav>
    </header>

    <div class="login-container">
        <h1>Iniciar Sesión</h1>
        <form id="loginForm">
            <label for="username">Usuario</label>
            <input type="text" id="username" name="username" placeholder="Ingresa tu usuario" required>

            <label for="password">Contraseña</label>
            <input type="password" id="password" name="password" placeholder="Ingresa tu contraseña" required>

            <button type="submit">Ingresar</button>

            <div class="link">
                <a href="/registro">¿No tienes una cuenta? Regístrate</a>
            </div>
        </form>
    </div>

    <script>
        document.getElementById('loginForm').addEventListener('submit', function (event) {
            event.preventDefault();

            const username = document.getElementById('username').value;
            const password = document.getElementById('password').value;

            // Verificar credenciales (simulado)
            if (username === 'admin' && password === '12345') {
                alert('Inicio de sesión exitoso como admin');
                window.location.href = '/Home/conciertoadd';
            } else if (username === 'caleb@gmail.com' && password === 'calebpenate2003') {
                // Para un usuario cualquiera
                alert('Inicio de sesión exitoso como usuario');
                window.location.href = '/Home/usuariopag';
            } 
            else if (username === 'camil@gmail.com' && password === 'camocastillo') {
                // Para un usuario cualquiera
                alert('Inicio de sesión exitoso como usuario');
                window.location.href = '/Home/usuariopag';
            }
            else {
                alert('Usuario o contraseña incorrectos');
            }
        });
    </script>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
